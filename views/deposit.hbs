<div class="container mt-5 mb-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Deposit Balance</h5>
            {{!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> --}}
            <p class="card-text">Account Number: {{accountNumber}} </p>
            <form action="/deposit" method="POST" class="mb-5">
                <div class="row mb-2">
                    <div class="col">
                        <input type="text" name="accountNumber" id="" hidden class="form-control"
                            placeholder="deposit amount" value={{accountNumber}}></div>
                </div>
                <div class="col">
                    <input type="number"  min="0" step=0.01  required name="depositAmount" id="" class="form-control" placeholder="Enter amount">
                    <input type="submit" value="submit" class="btn btn-primary mt-2">
                    <a href="/home" class="btn btn-danger mt-2">Cancel</a>
                </div>
        </div>
        </form>
    </div>
</div>
</div>